[Unit]
Description=keyszer
PartOf=keyszer.target
StopWhenUnneeded=true

[Service]
Environment=DISPLAY=:0
ExecStart=/usr/bin/keyszer --config /etc/keyszer.conf --device /dev/input/%I
Group=input
KillMode=process
Restart=on-failure
RestartSec=3
Type=simple
User=keymapper

[Install]
WantedBy=keyszer.target
