# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# default layout
workspace_layout tabbed

for_window [class="Thunar"] floating enable
assign [class="Emacs"] workspace number 1
assign [class="Google-chrome"] workspace number 2
assign [class="Slack"] workspace number 3

floating_minimum_size 75x50

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        tray_output DP1
        tray_output primary
        tray_output HDMI2
}

## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (1) DP1 ON, (2) DP2 ON, (3) HDMI2 ON, (0) OFF
mode "$mode_display" {
    bindsym 1 exec --no-startup-id xrandr --output DP2 --auto --off --output HDMI2 --auto --off --output DP1 --auto --pos 0x0 --scale 1.5x1.5 --output eDP1 --auto --pos 3840x0 --primary, mode "default"
    bindsym 2 exec --no-startup-id xrandr --output DP1 --auto --off --output HDMI2 --auto --off --output DP2 --auto --pos 0x0 --scale 1.5x1.5 --output eDP1 --auto --pos 3840x0 --primary, mode "default"
    bindsym 3 exec --no-startup-id xrandr --output DP1 --auto --off --output DP2 --auto --off --output HDMI2 --auto --pos 0x0 --scale 1.75x1.75 --output eDP1 --auto --pos 0x1890 --primary, mode "default"
    bindsym 0 exec --no-startup-id xrandr --output DP1 --auto --off --output DP2 --auto --off --output HDMI2 --auto --off --output eDP1 --auto --primary, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"

set $Locker exec "~/dotfiles/lock.sh" && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+z mode "$mode_system"

# Automatic started apps
exec --no-startup-id nm-applet # Network
exec --no-startup-id pasystray # Audio Volume
exec --no-startup-id blueman-tray # Bluetooth
exec --no-startup-id xcape -e 'Control_L=Escape' # make short-pressed Ctrl behave like Escape:
exec --no-startup-id xautolock -detectsleep -time 30 -locker "systemctl suspend"
exec --no-startup-id autorandr --change
exec --no-startup-id ibus-daemon -drx # Ibus
exec --no-startup-id dropbox
exec --no-startup-id enpass
exec --no-startup-id feh --bg-fill ~/Pictures/break-the-rules.jpg
exec --no-startup-id ~/.pyenv/shims/i3-workspace-names-daemon -d " |"

# Audio volume controls
bindsym XF86AudioRaiseVolume exec amixer -q sset Master 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q sset Master 5%- unmute
bindsym XF86AudioMute exec amixer -q sset Master toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screenshotting
bindsym $mod+Shift+p --release exec "scrot -ue 'mv $f /tmp && xclip -selection clipboard -t image/png -i /tmp/$n'; notify-send 'Screenshot has been copied to clipboard'"
bindsym $mod+Shift+Ctrl+p --release exec "scrot -se 'mv $f /tmp && xclip -selection clipboard -t image/png -i /tmp/$n'; notify-send 'Screen selection has been copied to clipboard'"

# Lock screen
bindsym $mod+Ctrl+q exec "~/dotfiles/lock.sh"
