(defwidget volume-module []
  (box
    :class "module icon"
    (eventbox
      :onclick "pavucontrol &" ; open pavucontrol on click
      :onrightclick "scripts/volume mute SINK" ; toggle mute on right click
      (label
        :class "vol-icon"
        :tooltip "Volume ${volume.percent}%"
        :text {volume.icon}))))
